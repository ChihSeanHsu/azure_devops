{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "new_vm_name": {
      "type": "string",
      "defaultValue": "vm-worker",
      "metadata": {
        "description": "The name of the new vm to be created. (if you need to create mutil-vms at one time, the name should between 1 and 12 characters)"
      }
    },
    "existing_lab_name": {
      "type": "string",
      "allowedValues": [
        "dtl-int",
        "dtl-dev",
        "dtl-stg",
        "dtl-prod"
      ],
      "metadata": {
        "description": "The name of an existing lab where the new vm will be created."
      }
    },
    "lab_subnet_name": {
        "type": "string",
        "defaultValue": "default",
        "metadata": {
            "description": "lab subnet name"
        }
    },
    "lab_vnet_name": {
        "type": "string",
        "defaultValue": "wu2-trend-vnet",
        "metadata": {
            "description": "lab vnet name"
        }
    },
    "vm_notes": {
      "type": "string",
      "allowedValues": [
        "Windows 10 Enterprise, Version 1903",
        "Windows Server 2016 Datacenter"
      ]
    },
    "vm_offer": {
      "type": "string",
      "allowedValues": [
        "Windows-10",
        "WindowsServer"
      ]
    },
    "vm_publisher": {
      "type": "string",
      "allowedValues": [
        "MicrosoftWindowsDesktop",
        "MicrosoftWindowsServer"
      ]
    },
    "vm_sku": {
      "type": "string",
      "allowedValues": [
        "19h1-ent",
        "2016-Datacenter"
      ]
    },
    "vm_os_type": {
      "type": "string",
      "defaultValue": "Windows"
    },
    "vm_size": {
      "type": "string",
      "defaultValue": "Standard_B2ms",
      "allowedValues": [
        "Standard_B2ms",
        "Standard_D2s_v3",
        "Standard_D4s_v3"
      ],
      "metadata": {
        "description": "The size of the new vm to be created."
      }
    },
    "vm_count": {
        "type": "int",
        "defaultValue": 1,
        "metadata": {
            "description": "vm count you want to deploy"
        }
    },
    "user_name": {
      "type": "string",
      "defaultValue": "trend",
      "metadata": {
        "description": "The username for the local account that will be created on the new vm."
      }
    },
    "password": {
      "type": "securestring",
      "defaultValue": "test@1234!",
      "metadata": {
        "description": "The password for the local account that will be created on the new vm."
      }
    },
    "az_devops_org_name": {
      "type": "string",
      "allowedValues": [
        "https://dev.azure.com/infinite-wars/"
      ],
      "metadata": {
        "description": "The URL for the Azure DevOps account, e.g. https://dev.azure.com/myorg"
      }
    },
    "az_devops_project_name": {
      "type": "string",
      "allowedValues": [
        "v1-epp-saas-1.0"
      ],
      "metadata": {
        "description": "The Azure DevOps project name, eg MyFirstProject"
      }
    },
    "az_deployment_group_name": {
      "type": "string",
      "allowedValues": [
        "iProduct-INT",
        "iProduct-DEV",
        "iProduct-STG",
        "iProduct-PROD",
        "MAC-INT",
        "MAC-DEV",
        "MAC-STG",
        "MAC-PROD",
        "ONE-INT",
        "ONE-DEV",
        "ONE-STG",
        "ONE-PROD"
      ],
      "metadata": {
        "description": "Name of the deployment group against which the agent has to be configured."
      }
    },
    "az_pat": {
      "type": "securestring",
      "metadata": {
        "description": "Personal Access Token for downloading and configuring Azure Pipelines deployment group agent."
      }
    },
    "tags": {
      "type": "string",
      "defaultValue": ""
    },
    "az_agent_name": {
      "type": "string",
      "metadata": {
        "description": "Optionally provide agent name. Defaults to $env:COMPUTERNAME"
      }
    },
    "Windows_Firewall_operations_firewallOperation": {
        "type": "string",
        "defaultValue": "Disable Firewall"
    }
  },
  "variables": {
    "lab_vnet_id": "[resourceId('Microsoft.DevTestLab/labs/virtualnetworks', parameters('existing_lab_name'), parameters('lab_vnet_name'))]",
    "vm_id": "[resourceId ('Microsoft.DevTestLab/labs/virtualmachines', parameters('existing_lab_name'), parameters('new_vm_name'))]",
    "vm_name": "[concat(parameters('existing_lab_name'), '/', parameters('new_vm_name'))]"
  },
  "resources": [
    {
      "apiVersion": "2018-09-15",
      "type": "Microsoft.DevTestLab/labs/virtualMachines",
      "name": "[concat(variables('vm_name'), padLeft(copyIndex(), 3, '0'))]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "[parameters('new_vm_name')]",
        "count": "[parameters('vm_count')]"
      },
      "properties": {
        "size": "[parameters('vm_size')]",
        "isAuthenticationWithSshKey": false,
        "sshKey": "",
        "userName": "[parameters('user_name')]",
        "password": "[parameters('password')]",
        "labVirtualNetworkId": "[variables('lab_vnet_id')]",
        "labSubnetName": "[parameters('lab_subnet_name')]",
        "disallowPublicIpAddress": false,
        "allowClaim": false,
        "notes": "[parameters('vm_notes')]",
        "galleryImageReference": {
            "offer": "[parameters('vm_offer')]",
            "publisher": "[parameters('vm_publisher')]",
            "sku": "[parameters('vm_sku')]",
            "osType": "[parameters('vm_os_type')]",
            "version": "latest"
        },
        "storageType": "StandardSSD",
        "artifacts": [
            {
              "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('existing_lab_name'), 'public repo', 'windows-settimezone')]",
              "parameters": [
                {
                  "name": "TimeZoneId",
                  "value": "Taipei Standard Time"
                }
              ]
            },
            {
                "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('existing_lab_name'), 'public repo', 'windows-selenium')]"
            },
            {
              "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('existing_lab_name'), 'public repo', 'windows-firewall')]",
              "parameters": [
                {
                  "name": "firewallOperation",
                  "value": "[parameters('Windows_Firewall_operations_firewallOperation')]"
                }
              ]
            },
            {
              "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('existing_lab_name'), 'public repo', 'windows-run-powershell')]",
              "parameters": [
                {
                  "name": "scriptFileUris",
                  "value": "https://raw.githubusercontent.com/jerryeml/azure_devops/master/cd_machine/v1_epp_saas_1.0/env_setup.ps1"
                },
                {
                  "name": "scriptToRun",
                  "value": "env_setup.ps1"
                },
                {
                  "name": "scriptArguments",
                  "value": "[concat('-DefaultUsername ', parameters('user_name'), ' -DefaultPassword ', parameters('password'))]"
                }
              ]
            },
            {
              "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('existing_lab_name'), 'public repo', 'windows-deploymentgroup')]",
              "parameters": [
                {
                  "name": "accountUrl",
                  "value": "[parameters('az_devops_org_name')]"
                },
                {
                  "name": "projectName",
                  "value": "[parameters('az_devops_project_name')]"
                },
                {
                  "name": "deploymentGroupName",
                  "value": "[parameters('az_deployment_group_name')]"
                },
                {
                  "name": "PersonalAccessToken",
                  "value": "[parameters('az_pat')]"
                },
                {
                  "name": "deploymentAgentTags",
                  "value": "[parameters('tags')]"
                },
                {
                  "name": "agentInstallPath",
                  "value": "C:\\deployment_agent"
                },
                {
                  "name": "agentName",
                  "value": "[parameters('az_agent_name')]"
                },
                {
                  "name": "RunAsAutoLogon",
                  "value": "true"
                },
                {
                  "name": "windowsLogonAccount",
                  "value": "[parameters('user_name')]"
                },
                {
                  "name": "windowsLogonPassword",
                  "value": "[parameters('password')]"
                }
              ]
            }
        ]
      }
    }
  ],
  "outputs": {
    "lab_vm_id": {
      "type": "string",
      "value": "[variables('vm_id')]"
    }
  }
}