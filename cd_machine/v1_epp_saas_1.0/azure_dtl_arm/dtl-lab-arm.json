{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "product_name": {
      "type": "string",
      "defaultValue": "one",
      "metadata": {
        "description": "The name of an testing environment and product name"
      }
    },
    "virtualNetworkResourceGroup": {
      "defaultValue": "wu2-deployment",
      "type": "String",
      "metadata": {
        "description": "Name of the existing VNET resource group"
      }
    },
    "virtualNetworkName": {
      "defaultValue": "wu2-trend-vnet",
      "type": "String",
      "metadata": {
        "description": "Name of the existing VNET"
      }
    },
    "vnetSubnetName": {
      "defaultValue": "default",
      "type": "String",
      "metadata": {
        "description": "Name of the existing SUBNET"
      }
    }
  },
  "variables": {
    "internal_testing_lab_name": "[concat('dtl-int-', parameters('product_name'))]",
    "dev_testing_lab_name": "[concat('dtl-dev-', parameters('product_name'))]",
    "stg_testing_lab_name": "[concat('dtl-stg-', parameters('product_name'))]",
    "prod_testing_lab_name": "[concat('dtl-prod-', parameters('product_name'))]",
    "vnet_reference_id": "[resourceId(parameters('virtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnet_reference_id": "[resourceId(parameters('virtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'),  parameters('vnetSubnetName'))]"
  },
  "resources": [
    {
      "apiVersion": "2018-09-15",
      "type": "Microsoft.DevTestLab/labs",
      "name": "[variables('internal_testing_lab_name')]",
      "location": "[resourceGroup().location]",
      "resources": [
        {
          "apiVersion": "2018-09-15",
          "name": "[parameters('virtualNetworkName')]",
          "type": "virtualNetworks",
          "location": "[resourceGroup().location]",
          "properties": {
            "description": "Existing Compute virtual network associated as part of the lab creation process.",
            "externalProviderResourceId": "[variables('vnet_reference_id')]",
            "subnetOverrides": [
              {
                "name": "[parameters('vnetSubnetName')]",
                "resourceId": "[variables('subnet_reference_id')]",
                "useInVmCreationPermission": "Allow",
                "usePublicIpAddressPermission": "Allow"
              }
            ]
          },
          "dependsOn": [
            "[resourceId('Microsoft.DevTestLab/labs', variables('internal_testing_lab_name'))]"
          ]
        },
        {
          "type": "schedules",
          "apiVersion": "2018-09-15",
          "name": "LabVmsShutdown",
          "properties": {
            "status": "Disabled",
            "timeZoneId": "Taipei Standard Time",
            "taskType": "LabVmsShutdownTask",
            "notificationSettings": {
              "status": "Disabled",
              "timeInMinutes": 10
            },
            "dailyRecurrence": {
              "time": "1200"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.DevTestLab/labs', variables('internal_testing_lab_name'))]"
          ]
        },
        {
          "type": "schedules",
          "apiVersion": "2018-09-15",
          "name": "LabVmAutoStart",
          "properties": {
            "status": "Disabled",
            "timeZoneId": "Taipei Standard Time",
            "taskType": "LabVmsStartupTask",
            "notificationSettings": {
              "status": "Disabled",
              "timeInMinutes": 10
            },
            "weeklyRecurrence": {
              "time": "1300",
              "weekdays": [
                "Sunday"
              ]
            }
          },
           "dependsOn": [
            "[resourceId('Microsoft.DevTestLab/labs', variables('internal_testing_lab_name'))]"
          ]
        }
      ],
      "properties": {
        "environmentPermission": "Contributor",
        "labStorageType": "StandardSSD",
        "mandatoryArtifactsResourceIdsLinux": [
          "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', variables('internal_testing_lab_name'), 'public repo', 'linux-install-docker')]"
        ],
        "mandatoryArtifactsResourceIdsWindows": [
          "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', variables('internal_testing_lab_name'), 'public repo', 'windows-awscli')]",
          "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', variables('internal_testing_lab_name'), 'public repo', 'windows-7zip')]",
          "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', variables('internal_testing_lab_name'), 'public repo', 'windows-chrome')]",
          "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', variables('internal_testing_lab_name'), 'public repo', 'windows-git')]",
          "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', variables('internal_testing_lab_name'), 'public repo', 'windows-notepadplusplus')]",
          "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', variables('internal_testing_lab_name'), 'public repo', 'windows-azurepowershell')]"
        ]
      },
      "tags": {
        "env": "int",
        "version": "offical"
      }
    },
